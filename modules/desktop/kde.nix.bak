{ config, lib, pkgs, ... }:

with lib;

{
  options.mySystem.desktop.kde = {
    enable = mkEnableOption "KDE Plasma desktop environment";
  };

  config = mkIf config.mySystem.desktop.kde.enable {
    services.xserver = {
      enable = true;
      displayManager.sddm.enable = true;
      desktopManager.plasma5.enable = true;
    };

    # Additional KDE packages
    environment.systemPackages = with pkgs; [
      kate
      konsole
      dolphin
    ];
  };
}
